<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="353.0" prefWidth="553.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.AddReservationViewController">
   <center>
        <VBox alignment="CENTER" prefHeight="353.0" prefWidth="553.0" spacing="10.0" style="-fx-background-color: #363636;" BorderPane.alignment="CENTER">
            <children>
            <VBox alignment="CENTER" prefHeight="58.0" prefWidth="553.0" spacing="10.0">
               <children>
                      <Label text="Event name" textFill="WHITE">
                          <font>
                              <Font name="System Bold" size="20.0" />
                          </font>
                      </Label>
                      <Label fx:id="lblEventTitle" text="Event name" textFill="WHITE">
                          <font>
                              <Font name="System Italic" size="16.0" />
                          </font>
                      </Label>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="59.0" prefWidth="368.0" spacing="10.0">
               <children>
                      <Label text="Customer Email" textFill="WHITE">
                          <font>
                              <Font name="System Bold" size="18.0" />
                          </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                      </Label>
                      <TextField fx:id="txtFieldCostumerEmail" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="252.0" promptText="Enter email" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="30.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                            <Label text="Ticket type" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <Label fx:id="lblTicketType" text="Ticket type" textFill="WHITE">
                                <font>
                                    <Font name="System Italic" size="14.0" />
                                </font>
                            </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                            <Label text="Quantity" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <Label fx:id="lblQuantity" text="1" textFill="WHITE">
                                <font>
                                    <Font name="System Italic" size="14.0" />
                                </font>
                            </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                      <MFXButton onAction="#onClickCancel" prefWidth="114.0" style="-fx-background-color: #C82828;" text="Cancel" />
                      <MFXButton onAction="#onClickSave" prefWidth="114.0" style="-fx-background-color: #309E2D;" text="Save" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            </children>
        </VBox>
   </center>
</BorderPane>
